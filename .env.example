# Environment variables template
# Copy this file to .env.local and fill in your actual values

# Supabase (Required for v1.0)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Direct Database Connection (for Drizzle)
DATABASE_URL=postgresql://postgres:password@host:6543/postgres

# OpenAI (Required for AI assistant)
OPENAI_API_KEY=your-openai-api-key-here

# PostHog Analytics (Optional but recommended)
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-key-here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Legacy (Not used in v1.0)
DATABASE_URL=
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
RESEND_API_KEY=
VERCEL_URL=
NODE_ENV=development
